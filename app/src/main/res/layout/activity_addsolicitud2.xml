<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addSolicitud_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33969FAA"
    android:orientation="vertical"
    tools:context=".SolicitudGasto.AddSolicitudActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#969FAA">

        <TextView
            android:id="@+id/usuarioas_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="8dp"
            android:text="Juan Perez"
            android:textColor="@color/azulApp"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="usuario"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:verticalScrollbarPosition="defaultPosition">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Periodo Inicio *"
                    android:textColor="@color/azulApp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/fechaInias_et"
                        android:layout_width="285dp"
                        android:layout_height="30dp"
                        android:background="@android:color/white"
                        android:textSize="13sp" />

                    <ImageButton
                        android:id="@+id/fechaInias_ib"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:tint="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Periodo Fin *"
                    android:textColor="@color/azulApp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/fechaFinas_et"
                        android:layout_width="285dp"
                        android:layout_height="30dp"
                        android:background="@android:color/white"
                        android:textSize="13sp" />

                    <ImageButton
                        android:id="@+id/fechaFinas_ib"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        android:tint="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Motivo *"
                    android:textColor="@color/azulApp" />

                <EditText
                    android:id="@+id/motivo_et"
                    android:layout_width="330dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white"
                    android:imeOptions="actionDone"
                    android:nextFocusDown="@id/descripcionas_et" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:text="DescripciÃ³n"
                    android:textColor="@color/azulApp" />

                <EditText
                    android:id="@+id/descripcionas_et"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white"
                    android:imeOptions="actionDone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Centro de costos"
                    android:textColor="@color/azulApp" />

                <EditText
                    android:id="@+id/centrocostos_et"
                    android:layout_width="330dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white"
                    android:imeOptions="actionDone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="Importe *"
                    android:textColor="@color/azulApp" />

                <EditText
                    android:id="@+id/importeas_et"
                    android:layout_width="330dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white"
                    android:digits="0123456789."
                    android:hint="$0.00"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_gravity="right"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/grabar_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@color/textoMenu"
                    android:padding="10dp"
                    android:text="Grabar"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/enviara_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/textoMenu"
                    android:padding="10dp"
                    android:text="Grabar y Enviar"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>