<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/informe_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombrei_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Guadalajara hhgghhjgjh"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/fechai_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26/10/19"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/labelInforme_tv"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/label_solicitud"
                android:gravity="center"
                android:text="Por aprobar"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:gravity="center">

            <TextView
                android:id="@+id/dineroi_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$12,000"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>