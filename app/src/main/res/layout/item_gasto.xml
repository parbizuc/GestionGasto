<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gasto_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:maxWidth="@dimen/llmaxWidth"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopItems"
            android:orientation="vertical">

            <TextView
                android:id="@+id/proveedor_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre proveedor"
                android:textColor="@color/negro"
                android:textSize="@dimen/labelMotivo" />

            <TextView
                android:id="@+id/fechag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26/10/19"
                android:textSize="@dimen/labeFecha"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/categoria_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria"
                android:textSize="@dimen/labeNombreSmall" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:minWidth="@dimen/minWidthpItemsDerecha"
            android:layout_marginTop="@dimen/marginTopItems"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dinerog_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$12,000"
                android:textSize="@dimen/labeItemMonto"
                android:textColor="@color/azulLabel" />

            <TextView
                android:id="@+id/labelGasto_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mtmoneda"
                android:gravity="center"
                android:text="Moneda"
                android:textSize="@dimen/labeItemMoneda"
                android:textColor="@color/azulLabel" />
            <Button
                android:id="@+id/borrargasto_btn"
                android:layout_width="@dimen/tamBtnBorrar"
                android:layout_height="@dimen/tamBtnBorrar"
                android:background="@drawable/btn_delete"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>