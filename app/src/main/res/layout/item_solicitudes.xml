<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/solicitudCV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Lopez"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/puesto_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equito de testing"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fecha_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26/10/19"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dinero_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$12,000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelSolicitud_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/label_solicitud"
                android:gravity="center"
                android:text="Pendiente" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>